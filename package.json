{
    "name": "@xola/ui-kit",
    "version": "3.0.8",
    "description": "Xola UI Kit",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xola/ui-kit.git"
    },
    "files": [
        "build",
        "index.css",
        "index.d.ts",
        "build/ui-kit.js",
        "build/ui-kit.cjs",
        "tailwind.config.cjs",
        "postcss.config.cjs"
    ],
    "main": "build/ui-kit.umd.js",
    "module": "build/ui-kit.mjs",
    "types": "index.d.ts",
    "type": "module",
    "scripts": {
        "start": "./scripts/storybook",
        "dev": "./scripts/storybook start --no-manager-cache",
        "build": "vite build && eza -l build",
        "ci": "npm run build",
        "build:storybook": "npm run build && ./scripts/storybook build",
        "clean": "rm -rf node_modules/.vite",
        "lint": "xola-lint src",
        "lint:fix": "xola-lint src --fix",
        "lint:report": "xola-lint src --reporter=json src > eslint_report.json",
        "format": "prettier -l --write src",
        "test": "vitest run",
        "chromatic": "chromatic --exit-zero-on-changes --build-script-name build:storybook"
    },
    "dependencies": {
        "@headlessui/react": "1.6",
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/line-clamp": "^0.4.4",
        "@tippyjs/react": "^4.2.6",
        "clsx": "^1.2.1",
        "dayjs": "^1.11.13",
        "downshift": "^6.1.12",
        "get-user-locale": "^1.5.1",
        "google-libphonenumber": "^3.2.39",
        "lodash-es": "^4.17.21",
        "nouislider-react": "^3.4.1",
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-day-picker": "^7.4.10",
        "react-dom": "^18.3.1",
        "react-hot-toast": "^2.4.1",
        "react-hotkeys-hook": "^3.4.7",
        "react-select": "^5.8.1",
        "react-textarea-autosize": "^8.5.3",
        "react18-json-view": "^0.2.8",
        "rollup-plugin-copy": "^3.5.0",
        "storybook-addon-designs": "^6.3.1",
        "tailwind-merge": "^2.5.5",
        "tippy.js": "^6.3.7"
    },
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@babel/preset-env": "^7.15.6",
        "@storybook/addon-actions": "^6.5.10",
        "@storybook/addon-essentials": "^6.5.10",
        "@storybook/addon-links": "^6.5.10",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addons": "^6.5.10",
        "@storybook/builder-webpack5": "^6.5.16",
        "@storybook/manager-webpack5": "^6.5.16",
        "@storybook/react": "^6.5.10",
        "@storybook/theming": "^6.5.10",
        "@types/react": "^18.3.8",
        "@types/react-dom": "^18.3.0",
        "@xola/jslint": "^3.0.1",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^8.2.2",
        "chromatic": "^6.11.4",
        "postcss": "8.4",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.4.1",
        "storybook-css-modules-preset": "^1.1.1",
        "tailwindcss": "3.4",
        "vite": "5.4",
        "vitest": "^2.1.1",
        "webpack": "^5.97.1"
    },
    "peerDependencies": {
        "@types/react": "^18.2.22",
        "@types/react-dom": "^18.2.7",
        "autoprefixer": "^10.3.1",
        "postcss": "^8.3.6",
        "tailwindcss": "^3.1.8",
        "vite": "^4.5.3"
    },
    "engines": {
        "node": ">=18"
    },
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "trailingComma": "all",
        "singleQuote": false,
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "always",
        "bracketSameLine": false,
        "tabWidth": 4
    }
}
