{
    "name": "@xola/ui-kit",
    "version": "2.1.27",
    "description": "Xola UI Kit",
    "license": "MIT",
    "files": [
        "build",
        "index.css",
        "index.d.ts",
        "tailwind.config.js",
        "postcss.config.js"
    ],
    "main": "build/ui-kit.umd.js",
    "module": "build/ui-kit.mjs",
    "types": "index.d.ts",
    "scripts": {
        "prepare": "node scripts/prepare && vite build",
        "start": "npm run storybook",
        "dev": "npm run storybook",
        "storybook": "storybook dev -p 6006 --no-open",
        "format": "prettier -l --write .",
        "lint": "xola-lint src --ignore src/stories",
        "lint:fix": "xola-lint src --ignore src/stories --fix=true",
        "lint:report": "xola-lint --ignore src/stories --reporter=json src > eslint_report.json",
        "test": "jest",
        "build": "node scripts/prepare && vite build",
        "build:storybook": "node scripts/prepare && storybook build"
    },
    "dependencies": {
        "@headlessui/react": "^1.4.0",
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/line-clamp": "^0.3.1",
        "@tippyjs/react": "^4.2.6",
        "clsx": "^1.1.1",
        "dayjs": "^1.10.7",
        "downshift": "^6.1.5",
        "get-user-locale": "^1.4.0",
        "google-libphonenumber": "^3.2.22",
        "nouislider-react": "^3.4.1",
        "prop-types": "^15.7.2",
        "react-day-picker": "^7.4.10",
        "react-hot-toast": "^2.1.0",
        "react-hotkeys-hook": "^3.4.0",
        "react-json-view": "^1.21.3",
        "react-select": "^5.7.0",
        "storybook-addon-designs": "^6.3.1",
