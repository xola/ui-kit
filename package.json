{
    "name": "xola-ui-kit",
    "version": "2.0.0-alpha1",
    "description": "Xola UI Kit",
    "license": "MIT",
    "files": [
        "build"
    ],
    "main": "./build/xola-ui-kit.umd.js",
    "module": "./build/xola-ui-kit.es.js",
    "exports": {
        ".": {
            "import": "./build/xola-ui-kit.es.js",
            "require": "./build/xola-ui-kit.umd.js"
        }
    },
    "scripts": {
        "start": "start-storybook -p 6006 -s public",
        "dev": "start-storybook -p 6006 -s public --no-manager-cache",
        "storybook": "start-storybook -p 6006 -s public",
        "build": "vite build",
        "build:storybook": "build-storybook -s public",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@headlessui/react": "^1.0.0",
        "@tailwindcss/forms": "^0.3.2",
        "@tippyjs/react": "^4.2.5",
        "clsx": "^1.1.1",
        "prop-types": "^15.7.2",
        "react-popper-tooltip": "^4.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.15",
        "@storybook/addons": "^6.2.8",
        "@storybook/theming": "^6.2.8",
        "@storybook/addon-actions": "^6.2.7",
        "@storybook/addon-essentials": "^6.2.7",
        "@storybook/addon-links": "^6.2.7",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/react": "^6.2.7",
        "autoprefixer": "^10.2.5",
        "babel-loader": "^8.2.2",
        "postcss": "^8.2.10",
        "prettier": "^2.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "tailwindcss": "^2.1.1",
        "vite": "^2.1.5"
    },
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4
    }
}
