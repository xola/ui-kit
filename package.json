{
    "name": "@xola/ui-kit",
    "version": "2.0.0-2",
    "description": "Xola UI Kit",
    "license": "MIT",
    "files": [
        "build",
        "index.css",
        "tailwind.config.js",
        "postcss.config.js"
    ],
    "main": "./build/ui-kit.umd.js",
    "module": "./build/ui-kit.es.js",
    "scripts": {
        "prepare": "node scripts/prepare && vite build",
        "start": "node scripts/prepare && start-storybook -p 6006 -s public",
        "dev": "node scripts/prepare && start-storybook -p 6006 -s public --no-manager-cache",
        "storybook": "node scripts/prepare && start-storybook -p 6006 -s public",
        "build": "node scripts/prepare && vite build",
        "build:storybook": "node scripts/prepare && build-storybook -s public",
        "lint": "xola-lint src",
        "lint:fix": "xola-lint src --fix",
        "lint:report": "xola-lint --reporter=json src > eslint_report.json && echo 'ESLint report saved to eslint_report.json'",
        "format": "prettier --write src",
        "test": "xola-lint && jest"
    },
    "dependencies": {
        "@headlessui/react": "^1.2.0",
        "@tailwindcss/forms": "^0.3.3",
        "@tippyjs/react": "^4.2.5",
        "clsx": "^1.1.1",
        "dayjs": "^1.10.6",
        "downshift": "^6.1.3",
        "get-user-locale": "^1.4.0",
        "google-libphonenumber": "^3.2.21",
        "mathjs": "^9.4.2",
        "prop-types": "^15.7.2",
        "react-day-picker": "^7.4.10",
        "react-hot-toast": "^2.0.0",
        "react-hotkeys-hook": "^3.3.1",
        "tippy.js": "^6.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.5",
        "@storybook/addon-actions": "^6.3.6",
        "@storybook/addon-essentials": "^6.3.6",
        "@storybook/addon-links": "^6.3.6",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/addons": "^6.3.6",
        "@storybook/react": "^6.3.6",
        "@storybook/theming": "^6.3.6",
        "@xola/jslint": "0.0.2",
        "autoprefixer": "^10.2.6",
        "babel-jest": "^27.0.2",
        "babel-loader": "^8.2.2",
        "jest": "^27.0.4",
        "lodash": "^4.17.21",
        "postcss": "^8.3.4",
        "prettier": "^2.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "storybook-css-modules-preset": "^1.1.1",
        "tailwindcss": "^2.2.4",
        "vite": "^2.4.4"
    },
    "peerDependencies": {
        "autoprefixer": "^10.2.5",
        "lodash": "^4.17.21",
        "postcss": "^8.2.10",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "tailwindcss": "^2.1.1"
    },
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "trailingComma": "all",
        "singleQuote": false,
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "always",
        "tabWidth": 4
    }
}
