{
    "name": "@xola/ui-kit",
    "version": "3.0.8",
    "description": "Xola UI Kit",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/xola/ui-kit.git"
    },
    "files": [
        "build",
        "index.css",
        "index.d.ts",
        "tailwind.config.js",
        "postcss.config.js",
        "ui-kit.es.js"
    ],
    "main": "build/ui-kit.es.js",
    "module": "build/ui-kit.es.js",
    "types": "build/index.d.ts",
    "scripts": {
        "prepare": "node scripts/prepare.mjs && vite build",
        "start": "npm run storybook",
        "dev": "npm start",
        "dev:clean": "npm run storybook -- --no-manager-cache",
        "build": "npm run prepare && vite build",
        "clean": "rm -rf node_modules/.vite",
        "storybook": "npm run prepare && storybook dev -p 6006",
        "build:storybook": "npm run prepare && storybook build",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "format": "prettier -l --write src",
        "lint": "eslint --cache --fix",
        "lint:ci": "eslint --cache",
        "lint:report": "eslint --cache --output-file eslint_report.json --format json",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "chromatic": "chromatic --exit-zero-on-changes --build-script-name build:storybook"
    },
    "dependencies": {
        "@headlessui/react": "1.6",
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/line-clamp": "^0.4.4",
        "@tippyjs/react": "^4.2.6",
        "ahooks": "^3.9.6",
        "axios": "^1.13.2",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.19",
        "downshift": "^6.1.12",
        "get-user-locale": "^1.5.1",
        "google-libphonenumber": "^3.2.39",
        "lodash-es": "^4.17.21",
        "nouislider-react": "^3.4.1",
        "react": "^18.3.1",
        "react-day-picker": "^7.4.10",
        "react-dom": "^18.3.1",
        "react-hot-toast": "^2.4.1",
        "react-hotkeys-hook": "^3.4.7",
        "react-select": "^5.8.1",
        "react-textarea-autosize": "^8.5.3",
        "react18-json-view": "^0.2.8",
        "storybook-addon-designs": "^6.3.1",
        "tailwind-merge": "^2.5.5",
        "tippy.js": "^6.3.7",
        "use-debounce": "^10.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.14.8",
        "@babel/preset-env": "^7.15.6",
        "@storybook/addon-docs": "9.1.16",
        "@storybook/addon-links": "9.1.16",
        "@storybook/react-vite": "9.1.16",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/google-libphonenumber": "^7.4.30",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^24.10.1",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "@vitejs/plugin-react": "^5.1.1",
        "@vitest/coverage-v8": "^2.1.1",
        "@vitest/ui": "^2.1.1",
        "@xola/jslint": "^3.2.0",
        "ajv": "^8.17.1",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^8.2.2",
        "chromatic": "^6.11.4",
        "eslint": "^9.39.1",
        "eslint-plugin-progress": "github:rushi/eslint-plugin-progress",
        "glob": "^13.0.0",
        "jsdom": "^23.0.0",
        "postcss": "8.4",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.4.1",
        "storybook": "9.1.16",
        "tailwindcss": "3.4",
        "typescript": "4.7",
        "vite": "^6.4.1",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^2.1.1"
    },
    "peerDependencies": {
        "autoprefixer": "^10.3.1",
        "postcss": "^8.3.6",
        "tailwindcss": "^3.4",
        "vite": "^6.4.1"
    },
    "engines": {
        "node": ">=20"
    },
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "trailingComma": "all",
        "singleQuote": false,
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "always",
        "bracketSameLine": false,
        "tabWidth": 4
    }
}
