{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        /* Override for build */
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "outDir": "./build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "storybook-static",
        "**/*.test.js",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stories.js",
        "**/*.stories.jsx",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "src/stories/**/*"
    ]
}
